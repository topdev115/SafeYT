<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaytoona.youtube.safe.gui.activities.PublicPlayListsImportActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dialog_backgound">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download_public_play_lists_description"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_margin="@dimen/horizontal_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/dialog_backgound"
                android:orientation="horizontal">

                <android.support.design.button.MaterialButton
                    android:id="@+id/select_all_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all"
                    android:textColor="@color/colorAccent"
                    app:backgroundTint="@android:color/white"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="2dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/select_none_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_none"
                    android:textColor="@color/colorAccent"
                    app:backgroundTint="@android:color/white"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_multi_check_expandable_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/dialog_backgound"
                android:orientation="horizontal">

                <android.support.design.button.MaterialButton
                    android:id="@+id/public_play_list_import_cancel_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginEnd="@dimen/horizontal_margin" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/public_play_list_import_ok_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/download_public_play_lists_button"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginEnd="@dimen/horizontal_margin" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
